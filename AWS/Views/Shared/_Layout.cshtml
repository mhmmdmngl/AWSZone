                    success: function (result) {
                        var arr_from_json = JSON.parse(result);
                        $("#drpKolons option").each(function() {
                            $(this).remove();
                        });
                        var sel = document.getElementById('drpKolons');
                        let counter = 0;
                        for (var table of arr_from_json) {
                            var opt = document.createElement('option');
                            opt.appendChild(document.createTextNode(table.name));
                            opt.value = table.name;
                            sel.appendChild(opt);
                        }
                    }
                });
                //alert( res + " " + this.value);

                
            });
        });

        var kolonDowns = document.getElementsByClassName('drpKolonc');
        Array.prototype.forEach.call(kolonDowns, function (el) {
            $('#' + el.id).on('change', function () {
                var tabloAdi = document.getElementById('drpTable');
                var sel = document.getElementById('drpMetod');
                var seciliMetot = sel.options[sel.selectedIndex].value;
                let sorgu = "";

                if (seciliMetot == "select") {
                    sorgu = "select * from " + tabloAdi.value;
                    var selected = [...this.options]
                        .filter(option => option.selected)
                        .map(option => option.value);
                    let dizi = selected + '';
                    var dizis = dizi.split(',');
                    var eklenecek = " where ";
                    for (let i = 0; i < dizis.length; i++) {
                        if (i == 0) {
                            eklenecek = eklenecek + dizis[i] + " = @@" + dizis[i] + " ";
                        }
                        else
                            eklenecek = eklenecek + " and " + dizis[i] + " = @@" + dizis[i] + " ";


                    }

                    document.getElementById("sqlSorgu").value = sorgu + " " + eklenecek;
                }
                else if (seciliMetot == "insert") {

                    var kolons = document.getElementById('drpKolons');
                    for (let i = 0; i < kolons.options.length; i++) {
                        if (i != 0)
                            kolons.options[i].selected = "true";
                    }
                    let kolonAdlari = "";
                    let degerler = "";

                    for (let i = 0; i < kolons.options.length; i++) {
                        if (i == 0) {
                            kolonAdlari = kolonAdlari + kolons.options[i].text;
                            degerler = degerler + '@@' + kolons.options[i].text;
                        }
                        else {
                            kolonAdlari = kolonAdlari + ", " + kolons.options[i].text;
                            degerler = degerler + ",@@" + kolons.options[i].text;

                        }
                    }
                    sorgu = "insert into " + tabloAdi.value + " (" + kolonAdlari + ")" + " values (" + degerler + ")";
                    document.getElementById("sqlSorgu").value = sorgu

                }

                else if (seciliMetot == "update") {
                    var kolons = document.getElementById('drpKolons');
                    for (let i = 0; i < kolons.options.length; i++) {
                        kolons.options[i].selected = "true";

                    }
                    let kolonAdlari = "";
                    let degerler = "";
                    sorgu = "update " + tabloAdi.value + " set ";
                    for (let i = 0; i < kolons.options.length; i++) {
                        if (i == 0) {
                            
                        }
                        else {
                            if (i == kolons.options.length -1)
                                sorgu = sorgu + kolons.options[i].value + " = " + "@@" + kolons.options[i].value;
                            else
                                sorgu = sorgu + kolons.options[i].value + " = " + "@@" + kolons.options[i].value + ",";                             
                        }
                    }
                    sorgu = sorgu + " where id = @@id";
                    document.getElementById("sqlSorgu").value = sorgu
                }
               

            });
        });
